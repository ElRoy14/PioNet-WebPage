<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PIONET-webPage</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PIONET-webPage.styles.css" asp-append-version="true" />
    <link rel="stylesheet" type='text/css' href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Arvo:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <header>
        <nav id="navbar" class="bottom-nav">
            <ul>
                <li>
                    <img src="~/img/packer-original.svg" />
                </li>
                <li>
                    <a id="home-text" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li>
                    <a id="about-text" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                </li>
                <li>
                    <a id="service-text" asp-area="" asp-controller="Home" asp-action="Service">Services</a>
                </li>
                <li>
                    <a id="contact-text" asp-area="" asp-controller="Home" asp-action="Contact">Contact Us</a>
                </li>
            </ul>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">
        <div class="copyright">
            <p><strong><span>&copy; @DateTime.Now.Year - Web Site</span></strong></p>
        </div>
    </footer><!-- End Footer -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("References", required: false)
</body>
</html>
